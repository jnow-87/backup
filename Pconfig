mainmenu "backup configuration"

config LOG_FILE
	string "log-file (default)"
	default "/var/log/backup.log"

config CONFIG_FILE
	string "config file (default)"
	default "/etc/backup.cfg"

config CONFIG
	string "config (default)"
	default "default"

config OUT_DIR
	string "output directory (default)"
	default "/tmp/backup_out"

config TMP_DIR
	string "directory for temporary files (default)"
	default "/tmp/backup"

config CP_ARGS
	string "cp command arguments"
	default "-rau"

config RSYNC_ARGS
	string "rsync command arguments"
	default "-rauAXH --delete"

config MV_ARGS
	string "mv command arguments"
	default ""

config DIFF_TOOL
	string "diff tool"
	default "vimdiffdir"

config TERMINAL
	string "terminal"
	default "xterm -e"

choice
	prompt "Build type"

	config BUILD_RELEASE
		bool "release"

	config BUILD_DEBUG
		bool "debug"
endchoice

menu "Hidden"
	visible if 0

	config BUILD_TYPE
		string "Build type"
		default "debug" if BUILD_DEBUG
		default "release" if BUILD_RELEASE
endmenu
